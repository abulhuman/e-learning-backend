{
  "name": "e-learning-backend",
  "version": "0.0.1",
  "description": "",
  "author": "Adem Mohammed & Ezra Ashenafi",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --color -f compact",
    "prepare": "husky install",
    "schema-gen": "npx ts-node src/generate-typings",
    "migration:create": "npx ts-node node_modules/typeorm/cli.js migration:create --config src/database/database.config -d src/database/migrations -n",
    "migration:run": "npm run build && npx ts-node node_modules/typeorm/cli.js migration:run --config src/database/database.config",
    "migration:show": "npx ts-node node_modules/typeorm/cli.js migration:show --config src/database/database.config",
    "migration:revert": "npx ts-node node_modules/typeorm/cli.js migration:revert --config src/database/database.config",
    "schema:sync": "npx ts-node node_modules/typeorm/cli.js schema:sync --config src/database/database.config"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.6.1",
    "@nestjs/apollo": "^10.0.8",
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^1.2.1",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^10.0.8",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^8.2.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.3",
    "@types/helmet": "^4.0.0",
    "apollo-server-express": "^3.6.3",
    "bcrypt": "^5.0.1",
    "connect-typeorm": "^1.1.4",
    "dotenv": "^16.0.0",
    "express-session": "^1.17.2",
    "graphql": "^16.3.0",
    "handlebars": "^4.7.7",
    "helmet": "^5.0.2",
    "joi": "^17.6.0",
    "nodemailer": "^6.7.3",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.2.45",
    "typeorm-static": "^1.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.2.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-morph": "^13.0.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "nodemonConfig": {
    "name": "nodemon",
    "ext": "js,mjs,json,graphql"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
